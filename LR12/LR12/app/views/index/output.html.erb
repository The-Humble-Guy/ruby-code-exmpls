<%if @error %>
  <p><%= @error %></p>
  <p><%= link_to "Ввести число заново", :index_input %></p>
<%else %>
  <table>
    <tr>
      <th>Число</th>
      <th>Его квадрат</th>
    </tr>
    <% @result.each do |content| %>
      <tr>
        <%content.each do |i| %>
          <td><%=i %></td>
        <%end %>
      </tr>
    <%end %>
    <tr>
      <td> <b>Всего чисел</b> </td>
      <td> <b><%= @result.count %></b> </td>
    </tr>
  </table>
  <p><%= link_to "Ввести число заново", :index_input %></p>
<%end %>